<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEADER -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MyWatt"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#B8454E"
        android:padding="16dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Logo -->
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:srcCompat="@drawable/applogo"
                android:scaleType="fitCenter"
                android:layout_marginBottom="10dp"/>

            <!-- Month Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Month"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinnerMonth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:background="@drawable/spinner_arrow"/>

            <!-- Units Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electricity Used (1-1000 kWh)"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etUnits"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:elevation="2dp"
                android:inputType="number"
                android:hint="e.g., 467 kWh"
                android:text=""/>

            <!-- Rebate Radio Buttons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rebate Percentage"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/radioGroupRebate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0%"
                    android:textSize="14sp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1%"
                    android:textSize="14sp"/>

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2%"
                    android:textSize="14sp"/>

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3%"
                    android:textSize="14sp"/>

                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4%"
                    android:textSize="14sp"/>

                <RadioButton
                    android:id="@+id/radio5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5%"
                    android:textSize="14sp"/>
            </RadioGroup>

            <!-- Calculate Button -->
            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:text="CALCULATE &amp; SAVE"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#B8454E"/>

            <!-- Results Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Charges:"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tvTotalCharges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM 0.00"
                        android:textSize="14sp"
                        android:textColor="#333333"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Final Cost:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/tvFinalCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM 0.00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#B8454E"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Bottom Buttons -->
            <Button
                android:id="@+id/btnViewList"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:text="VIEW SAVED BILLS"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#B8454E"/>

            <Button
                android:id="@+id/btnAbout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:text="ABOUT DEVELOPER"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#B8454E"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>