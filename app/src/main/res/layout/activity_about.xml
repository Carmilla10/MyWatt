<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Developer"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#B8454E"
        android:layout_marginBottom="16dp"/>

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"/>

    <!-- Personal Information Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERSONAL INFORMATION"
            android:textSize="11sp"
            android:textColor="#888888"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name:"
                android:textSize="13sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Nur Carmilla Binti Abdullah Muhammad Shafiq"
                android:textSize="13sp"
                android:textColor="#333333"
                android:textAlignment="textEnd"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Student ID:"
                android:textSize="13sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2023268272"
                android:textSize="13sp"
                android:textColor="#333333"
                android:textAlignment="textEnd"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Course:"
                android:textSize="13sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvCourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="ICT602 - Mobile Technology And Development"
                android:textSize="13sp"
                android:textColor="#333333"
                android:textAlignment="textEnd"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GitHub:"
                android:textSize="13sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvGithubUrl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="https://github.com/Carmilla10/MyWatt"
                android:textSize="13sp"
                android:textColor="#B8454E"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="textEnd"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Instructions Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOW TO USE MYWATT"
            android:textSize="11sp"
            android:textColor="#888888"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Select month from dropdown\n2. Enter electricity units (1-1000 kWh)\n3. Enter rebate percentage (0-5%)\n4. Click CALCULATE &amp; SAVE\n5. View saved bills in VIEW SAVED BILLS\n6. Tap any bill to edit details\n7. Long press any bill to delete"
            android:textSize="13sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"/>
    </LinearLayout>

    <!-- Copyright -->
    <TextView
        android:id="@+id/tvCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© 2025 MyWatt. All Rights Reserved."
        android:textSize="10sp"
        android:textColor="#999999"
        android:layout_marginBottom="16dp"/>

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#B8454E"
        android:text="BACK"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="14sp"/>

</LinearLayout>